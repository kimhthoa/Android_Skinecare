<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/giohang_fragment_rl1"
        android:padding="8dp"
        android:background="@color/hong"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/giohang_fragment_imgback"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@+id/giohang_fragment_imgback"
            android:layout_marginLeft="10dp"
            android:text="Giỏ hàng"
            android:textStyle="bold"
            android:textColor="@color/trang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/giohang_fragment_imgmess"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_message_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_below="@id/giohang_fragment_rl1"
        android:layout_above="@id/giohang_fragment_rl3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/giohang_fragment_rl3"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <CheckBox
            android:id="@+id/giohang_fragment_checkbox"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:paddingTop="5dp"
            android:layout_toRightOf="@id/giohang_fragment_checkbox"
            android:text="Chọn tất cả"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/giohang_fragment_btnMuahang"
            android:layout_alignParentRight="true"
            android:background="@color/hong"
            android:textColor="@color/trang"
            android:text="Mua hàng"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:layout_toLeftOf="@id/giohang_fragment_giatien"
            android:text="Tổng tiền: "
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/giohang_fragment_giatien"
            android:layout_toLeftOf="@id/giohang_fragment_btnMuahang"
            android:text="120.000đ"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:textColor="#F44336"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>